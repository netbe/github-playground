# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  lane :fail do
    begin
	foo()
    rescue => e
	UI.test_failure!("Failing running tests #{e.to_s}")
    end
  end
  
  desc "Generate build"
  lane :build do
    sh("echo \"::group::My title\"")
    echo "Inside group"
    sh("echo \"::endgroup::\"")


    build_app(
  	scheme: "Playground",
	configuration: "Debug",
	export_method: "development"
    )	
  end

  lane :test do 
    puts "::group::Tests"
    puts "Inside group"
    puts "::endgroup::"

    run_tests(
      step_name: "ðŸ§ª Running tests with test",
	testplan: "Playground",
      scheme: "Playground",
      configuration: "Debug",
      sdk:"iphonesimulator",
      derived_data_path: "DerivedData",
      result_bundle: true,
      output_directory: "artifacts/",
      output_types: "junit"
    )  
  end  

	def foo()

	run_tests(
      step_name: "ðŸ§ª Running tests with foo()",
      testplan: "Playground",
      scheme: "Playground",
      configuration: "Debug",
      sdk:"iphonesimulator",
      derived_data_path: "DerivedData",
      result_bundle: true,
      output_directory: "artifacts/",
      output_types: "junit"
    )  
	end
end
